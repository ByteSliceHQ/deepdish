{
  "name": "@deepdish/monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:packages": "turbo build --filter './packages/*'",
    "ci:check": "bun install --frozen-lockfile & biome ci . & bun run sort-manifests --check & cspell --dot .",
    "ci:fix": "biome check --write . & bun run sort-manifests",
    "ci:publish": "bun run build:packages && changeset publish && git push --follow-tags",
    "ci:version": "changeset version",
    "clean": "rimraf --glob **/.next **/.turbo **/dist **/node_modules",
    "dev": "turbo dev",
    "sort-manifests": "sort-package-json package.json apps/**/package.json packages/**/package.json"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@changesets/changelog-git": "0.2.0",
    "@changesets/cli": "2.27.8",
    "cspell": "8.14.2",
    "rimraf": "6.0.1",
    "sort-package-json": "2.10.1",
    "turbo": "2.1.1"
  },
  "packageManager": "bun@1.1.27"
}
