{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    },
    "//#spellcheck": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "dependsOn": ["^build"],
      "env": ["DEEPDISH_SECRET_KEY", "DEEPDISH_URL"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "env": ["DEEPDISH_SECRET_KEY", "DEEPDISH_URL"]
    }
  }
}
