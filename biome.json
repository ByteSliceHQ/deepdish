{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": [
      "**/package.json",
      ".flox/cache/",
      ".next/",
      ".tsup/",
      ".turbo/",
      "dist/",
      "generated/",
      "nix/",
      "public/mockServiceWorker.js"
    ]
  },
  "linter": {
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn"
      },
      "performance": {
        "noBarrelFile": "warn"
      },
      "suspicious": {
        "useAwait": "error"
      },
      "style": {
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": ["kebab-case"]
          }
        }
      },
      "a11y": {
        "noSvgWithoutTitle": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "formatWithErrors": true
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "overrides": [
    {
      "include": ["**/*.tsx"],
      "linter": {
        "rules": {
          "suspicious": {
            "useAwait": "off"
          }
        }
      }
    },
    {
      "include": ["packages/**"],
      "linter": {
        "rules": {
          "nursery": {
            "noProcessEnv": "error"
          }
        }
      }
    }
  ]
}
